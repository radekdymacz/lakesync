{
	"name": "@lakesync/monorepo",
	"private": true,
	"packageManager": "bun@1.3.8",
	"workspaces": [
		"packages/*",
		"apps/*",
		"apps/examples/*"
	],
	"scripts": {
		"build": "turbo run build",
		"test": "turbo run test",
		"typecheck": "turbo run typecheck",
		"lint": "biome check .",
		"lint:fix": "biome check --fix .",
		"test:integration": "vitest run --config vitest.integration.config.ts",
		"docs:dev": "bun run --filter @lakesync/docs dev",
		"publish:npm": "cd packages/lakesync && bun run build && bun publish --access public",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"husky": "^9.1.7",
		"tsup": "^8.5.1",
		"turbo": "^2.3.0",
		"typescript": "^5.7.0",
		"vite": "^7.3.1",
		"vitest": "^4.0.18"
	}
}
