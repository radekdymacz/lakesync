{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"files": {
		"includes": [
			"**",
			"!**/node_modules",
			"!**/dist",
			"!**/.turbo",
			"!**/.wrangler",
			"!**/*.wasm",
			"!**/*.proto",
			"!**/gen",
			"!apps/docs"
		]
	}
}
