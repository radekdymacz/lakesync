	"keywords": [
		"sync",
		"offline-first",
		"lakehouse",
		"iceberg",
		"gateway",
		"server"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/radekdymacz/lakesync.git",
		"directory": "packages/gateway"
	},
	"license": "Apache-2.0",
	"author": "Radek Dymacz",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
